@model  IEnumerable<Diaries.Models.V_ListType_Listing>

<head>
    <title>Diary PartialView</title>
</head>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="ListingInformationSection" class="AjaxCall">
        <div id="ListingInformationDetailTable" class="AjaxCall"></div>


        <article style="width:600px; float:left;">
            <section style="width:100%; padding-left:50px;">

                <table border="1" style="font-family: Arial; float: right; font-size: 9pt; background-color: transparent; width: 100%; height: auto; ">
                    <tr style="background-color: #46568c; color: white; "><th align="center"><b>Listing Information</b></th></tr>
                    <tr>
                        <td>
                            <table border="0" style="font-family: Arial; float: right; font-size: 9pt; background-color: transparent; width: 100%; height: auto; ">
                                <tr style="background-color: #46568c; color: white; "><th align="center"><a style="word-spacing:80px; ">Day Date </a> <a style="word-spacing:50px;">Limit Current Available</a></th></tr>
                                <tr>
                                    <td>
                                        <div style="overflow:auto; height:900px; width:auto;  font-family: arial; font-size: 9pt;">
                                            <table border="0" style="font-family: Arial; font-size: 9pt; width:100%; height:900px;">


                                             @if (Model != null)
                                                {
                                                    int i = 0;
                                                    foreach (var item in Model)
                                                    {
                                                        i = i + 1;
                                                        <tr class="ListTypeMngInfo" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: @(i % 2 == 0 ? "threedlightshadow" : "whitesmoke"); float: left">
                                                            @*style="font-family arial; font-size 9pt; width 100%; background-color @(i % 2 == 0 ? "threedlightshadow" : "whitesmoke") float: left ;">*@
                                                            <td align="left" width="100px">
                                                                @item.V_L_Day
                                                            </td>
                                                            <td align="left" width="125px">
                                                                @if (@item.D_id != 0)
                                                                {@item.V_L_Date.ToString("dd/MM/yyyy") }    
                                                            </td>
                                                            <td style="width:90px;">
                                                                @if (@item.D_id != 0)
                                                                {@item.V_L_Limit }
                                                            </td>
                                                            <td style="width:100px;">
                                                                @if (@item.D_id != 0)
                                                                {@item.V_L_Current}
                                                            </td>
                                                            <td style="width:30px;">
                                                                @if (@item.D_id != 0)
                                                                {@item.V_L_Available}
                                                            </td>
                                                        </tr>
                                                    }
                                                }

                                                @*<tr class="ListTypeMngInfo" style="font-family: Arial; font-size: 9pt; width: 100%;  background-color: whitesmoke; float: left">

                                                @if (Model != null)
                                                {
                                                    int i = 0;
                                                    foreach (var item in Model)
                                                    {
                                                        <td align="left" width="100px">
                                                            @item.
                                                        </td>
                                                        <td align="left" width="125px">
                                                            13/06/2014
                                                        </td>
                                                        <td style="width:90px;">
                                                            10
                                                        </td>
                                                        <td style="width:100px;">
                                                            8
                                                        </td>
                                                        <td style="width:30px;">
                                                            2
                                                        </td>
                                                    }
                                                }
                                                </tr>*@
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </section>
        </article>

    </div>


}