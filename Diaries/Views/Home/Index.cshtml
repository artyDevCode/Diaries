@model Diaries.Models.V_HomePage

<aside id="mainContainer">
    <table border="0" style="font-family: Arial; float: left; font-size: 18pt; background-color: transparent;  width: auto; height: 100%; ">
        <tr style="background-color: #46568c; color: white;"><th align="center"><b> MMC Diary</b></th></tr>
        <tr>
            <td>
                <div style="overflow:auto; height:210px; width:auto;  font-family: arial; font-size: 9pt;">
                    <table border="0" style="font-family: Arial; font-size: 9pt; width:100%; height:25px;">
                        @{
                            int i = 0;
                            foreach (var item in Model.V_HomePage_DiaryNames)
                            {
                                i = i + 1;
                                <tr class="DiaryRec" style="background-color:  @(i % 2 == 0 ? "threedlightshadow": "whitesmoke") ">
                                    <td>
                                        <span class="ColourDiary" style="background-color: @item.V_H_DiaryName_BkgColour"></span>
                                    </td>
                                    <td class="DiaryMng">
                                        @item.V_H_DiaryName_Name
                                    </td>
                                </tr>
                            }
                        }

                    </table>
                </div>
                <div class="datepickerMain" style="font-size:12px; padding-top:20px;"></div>
            </td>
        </tr>
    </table>

</aside>


@Html.Partial("_HomeArticle", Model)
