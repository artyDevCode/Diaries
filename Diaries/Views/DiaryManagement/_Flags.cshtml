@model  IEnumerable<Diaries.Models.V_Diary_List_Flags>

<head>
    <title>List Flags Attributes PartialView</title>
</head>

<table border="0" cellspacing="0" cellpadding="10">
    <tr>
        <td>

            <table border="1" style="font-family: Arial; float: right; font-size: 9pt; background-color: whitesmoke; width: auto; height: 100%; ">
                <tr style="background-color: #46568c; color: white; "><th align="center"><b>Flags</b></th></tr>
                <tr>
                    <td class="auto-style12">
                        @if (Model != null)
                        {
                            int i = 0;
                            foreach (var item in Model)
                            {
                                if (i == 0)
                                {
                                    <span>
                                        <input type="text" style="width:647px" id="FText" name=@item.V_F_Text value=@item.V_F_Text />
                                        <input type="button" style="width:auto" id="AddFlag" value="Add Flag" class="btn btn-primary" />

                                    </span>
                                }
                                i++;
                            }
                        }

                        <p style="font-family: Arial; font-size: 10pt; width: 720px; background-color: #46568c; color:white;">&nbsp;Active</p>

                        <div style="overflow:auto; height:115px; width:720px; font-family: arial; float: left; font-size: 9pt; background-color: whitesmoke;">

                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: white; float: left" cellspacing="0" cellpadding="0">
                                @foreach (var item in Model)
                                {
                                    if (item.V_F_Deleted == false)
                                    {
                                        <tr style="background-color: threedlightshadow;">
                                            <td>
                                                @item.V_F_Name
                                                <input type="button" id="@item.V_F_id" class="FUpdate" title="@item.V_F_Name" style="border:none;  float:right;" value="Update" />
                                                <input type="button" id="@item.V_F_id" class="FMakeInactive" style="border:none;  float:right;" value="Make Inactive" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>

                        </div>
                    </td>
                </tr>
            </table>

            <table border="1" style="font-family: Arial; float: right; font-size: 9pt; background-color: whitesmoke; width: auto; height: 100%; ">
                <tr style="background-color: #46568c; color: white; "><th align="center"><b>Inactive</b></th></tr>
                <tr>
                    <td class="auto-style12">
                        <div style="overflow:auto; height:115px; width:720px; font-family: arial; float: left; font-size: 9pt; background-color: whitesmoke;">

                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: white; float: left" cellspacing="0" cellpadding="0">
                                @foreach (var item in Model)
                                {
                                    if (item.V_F_Deleted == true)
                                    {
                                        <tr style="background-color: threedlightshadow;">
                                            <td>
                                                @item.V_F_Name
                                                <input type="button" id="@item.V_F_id" class="FMakeActive" style="border:none;  float:right;" value="Make Active" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                    </td>
                </tr>
            </table>

        </td>
    </tr>
</table>




