@model IEnumerable<Diaries.Models.Access>

@{
    ViewBag.Title = "Access Control";
}

<h3>Access Groups</h3>
<br />
<p>
    @Html.ActionLink("Add", "Create", null, new { @class = "btn btn-primary" })
</p>

<table border="1" cellspacing="0" cellpadding="10" style="width: auto; height: 100%">
    <tr>
        <td>
            <table border="0" style="font-family: Arial; float: left; font-size: 9pt; background-color: whitesmoke; width: 950px; height: 100%; ">
                @*<tr style="background-color: #46568c; color: white; "><th align="center"><b>Access Group Listings</b></th></tr>*@
                <tr>
                    <td>
                        <table id="accessgroups" border="0" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.AccessGroup)</th>
                                    <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                    <td id="tab2">&nbsp</td>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.AccessGroup)</td>
                                            <td id="tab1"> @Html.DisplayFor(modelItem => item.UserName)</td>
                                            <td>@Html.ActionLink("Delete", "Delete", "Access", new { id = item.Id }, null)</td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>
            </td>
        </tr>
    </table>
