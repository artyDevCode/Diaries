@model Diaries.Models.NonSittingDay

@{
    ViewBag.Title = "Edit Non Sitting Day";
}


<h3>Edit Non Sitting Day</h3>
<p></p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.NSD_ID)
    @Html.HiddenFor(model => model.CreatedBy)
    @Html.HiddenFor(model => model.CreatedOn)
    @Html.HiddenFor(model => model.Deleted)

    <p style="font-size:inherit;color:red">@ViewData["ErrorMessage"]</p>

    <table border="0">
        <tr>
            <td class="auto-style16">
                <input type="submit" value="Save" class="btn btn-primary" />
                @Html.ActionLink("Delete", "Delete", "NonSittingDay", new { id = @Model.NSD_ID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Cancel", "Index", "NonSittingDay", new { @class = "btn btn-danger" })
            </td>
        </tr>
    </table>

    <p></p>


    <table border="1" cellspacing="0" cellpadding="10">
        <tr>
            <td>
                <table border="0" style="font-family: Arial; float: left; font-size: 9pt; background-color: whitesmoke; width: auto; height: 100%; ">
                    <tr style="background-color: #46568c; color: white; "><th align="center"><b>Day Notes</b></th></tr>
                    <tr>
                        <td class="auto-style12">

                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: whitesmoke; float: left" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5" width="auto">
                                        Start Date:
                                    </td>
                                    <td align="left">
                                        <input type="datetime" readonly="readonly" id="NSD_Date" name="NSD_Date" value=@Model.NSD_Date.ToString("dd-MM-yyyy") style="width:100%; height:100%; font-size:12px; padding-top:5px;" />
                                        @Html.ValidationMessageFor(model => model.NSD_Date)
                                    </td>
                                </tr>

                            </table>

                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: ThreeDLightShadow; float: left" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5" width="auto">
                                        Note:
                                    </td>
                                    <td align="left">
                                        @Html.EditorFor(model => model.NSD_Reason)
                                        @Html.ValidationMessageFor(model => model.NSD_Reason)
                                    </td>
                                </tr>

                            </table>

                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: ThreeDLightShadow; float: left" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5" width="auto">
                                        Active:
                                    </td>
                                    <td align="left">
                                        @*@if (Model.NSD_Active == true)
                                        {
                                            <input type="checkbox" disabled="disabled" readonly="readonly" name="IsActive" id="IsActive" value=true checked="checked" />
                                            <input type="checkbox" name="NSD_Active" id="NSD_Active" value=true checked="checked" />
                                        }
                                        else
                                        {
                                            <input type="checkbox" name="NSD_Active" id="NSD_Active" value=false />
                                        }*@
                                        @Html.EditorFor(model => model.NSD_Active)
                                        @Html.ValidationMessageFor(model => model.NSD_Active)
                                    </td>
                                </tr>

                            </table>




                        </td>

                    </tr>

                </table>

                <table border="0" style="font-family: Arial; float: right; font-size: 9pt; background-color: whitesmoke; width: auto; height: 100%; ">
                    <tr style="background-color: #46568c; color: white; "><th align="center"><b>Colours</b></th></tr>
                    <tr>
                        <td class="auto-style12">
                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: whitesmoke; float: left" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5" width="auto">
                                        Background Colour:
                                    </td>
                                    <td align="left" class="input-group color">
                                        <span class="input-group-addon"><i></i></span>

                                        @Html.ColorPickAreaFor(Model.NSD_BackColor, Model.NSD_BackColor, "NSD_BackColor")
                                        @Html.ValidationMessageFor(model => model.NSD_BackColor)
                                    </td>
                                </tr>

                            </table>
                            <table border="0" style="font-family: Arial; font-size: 9pt; width: 100%; background-color: whitesmoke; float: left" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5" width="auto">
                                        Text Colour:
                                    </td>
                                    <td align="left" class="input-group color">
                                        <span class="input-group-addon"><i></i></span>
                                        @Html.ColorPickAreaFor(Model.NSD_TextColor, Model.NSD_TextColor, "NSD_TextColor")
                                        @Html.ValidationMessageFor(model => model.NSD_TextColor)
                                    </td>
                                </tr>

                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

}


